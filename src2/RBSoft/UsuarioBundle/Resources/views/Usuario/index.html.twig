{% extends "AppBundle:admin:layout.html.twig" %}
{% block id 'Usuario' %}

{% block contenido -%}
{% embed '::portlet.html.twig' with {'titulo': 'Lista de Usuario <small>(' ~ pager.totalItemCount ~ ' )</small>' } %}  
    {% block in_header %} 
            <div class='pull-right'>
                <a class='btn bg-success btn-xs dropdown-toggle' data-toggle='modal' data-target='#filters'>
                    Filtro
                    <span class='caret'></span>
                </a>
            </div>
    {% endblock %}

    {% block cuerpo %} 
        {% for type, flashMessages in app.session.flashbag.all() %} 
            {% for flashMessage in flashMessages %} 
                <div class='alert alert-{{ type }}'> 
                    {{ flashMessage }} 
                </div> 
            {% endfor %} 
        {% endfor %}

            <form method='post' action='.' class='form-horizontal'>
            {% embed 'modal.html.twig' with { 'modal_id': 'filters', 'modal_titulo': 'Filtro de Usuarios'} %} 
                {% block modal_contenido %} 
                    {{ form_rest(filterform) }} 
                {% endblock %} 

                {% block modal_botones %} 
                        <input type='submit' class='btn btn-primary' name='submit-filter' value='Aplicar'/>
                {% endblock modal_botones %} 
            {% endembed %} 
            </form>

            <p></p>

            <table class="table table-striped table-bordered  table-responsive">
                <thead>
                    <tr>
                        <th class="{{ pager.isSorted('login') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}">Login</th>
                        <th class="{{ pager.isSorted('email') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}">Email</th>
                        <th class="{{ pager.isSorted('nombre') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}">Nombre</th>
                        <th class="{{ pager.isSorted('telefono') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}">Telefono</th>

                        <th class="{{ pager.isSorted('fecha_alta') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}">Fecha_alta</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in pager %}
                    <tr>
                        <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.login }}</a></td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.telefono }}</td>

                        <td>{% if entity.fechaalta %}{{ entity.fechaalta|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td style="width: 100px;">
                            <div class="btn-group">
                                <a href="{{ path('usuario_show', { 'id': entity.id }) }}" class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top" title="Ver mas informaciÃ³n" >
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top" title="Editar los datos" >
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-lg-10">
                    {{ knp_pagination_render(pager) }}
                </div>
                <div class="col-lg-2">
                    <a href="{{ path('usuario_new') }}" class="larCrud_nuevo btn btn-sm btn-primary">
                        Nuevo Usuario
                    </a>
                </div>
            </div>

     {% endblock %} 
 {% endembed %} 


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("bundles/rbsoftabmgenerador/css/laradmin.css") }}">
{% endblock %}

{% endblock contenido %}
