{% block extends %}
    {{ "{% extends 'AppBundle:admin:layout.html.twig' %}" }}
{% endblock extends %}

{{ "{% block id '" ~  entity ~"' %} "}}

{% block body %}
    {{ "{% block contenido -%}" }}
    {{ "{% embed '::portlet.html.twig' with {'titulo': 'Lista de " ~ entity ~ " <small>(' ~ pager.totalItemCount ~ ' )</small>' } %}  " }}
    {{ "    {% block in_header %} "}}
    <div class='pull-right'>{{ '\n' }}
    {% if 'new' in actions %}
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_new') }}" }}" class="button_nuevo btn btn-sm btn-success">{{ '\n' }}
        {{ "{{'Nuevo " ~ entity ~ "'|trans }}" }}{{ '\n' }}
        </a>{{ '\n' }}
    {% endif %}
    </div>{{ '\n' }}
    {{ "    {% endblock %}" }}

    {{ "    {% block cuerpo %} " }}
    {{ "        {% for type, flashMessages in app.session.flashbag.all() %} " }}
    {{ "            {% for flashMessage in flashMessages %} " }}
    {{ "                <div class='alert alert-{{ type }}'> " }}
    {{ "                    {{ flashMessage }} " }}
    {{ "                </div> " }}
    {{ "            {% endfor %} " }}
    {{ "        {% endfor %}" }}

    <form method='post' action='.' class='form-horizontal'>
        {{ "            {% embed 'modal.html.twig' with { 'modal_id': 'filters', 'modal_titulo': 'Filtro de "~ entity ~"s'} %} " }}
        {{ "                {% block modal_contenido %} " }}
        {{ "                    {{ form_rest(filterform) }} " }}
        {{ "                {% endblock %} " }}

        {{ "                {% block modal_botones %} " }}{{ '\n' }}
        <input type='submit' class='btn btn-success' name='submit-filter' value='Aplicar'/>{{ '\n' }}
        <input type='submit' class='btn btn-primary' name='submit-filter' value="reset"/>{{ '\n' }}
        {{ "                {% endblock modal_botones %} " }}
        {{ "            {% endembed %} " }}
    </form>


    <div class="row">
        <div class="col-lg-10">
        </div>
        <div class="col-lg-2">
            <div class="pull-right">
                <a class='btn bg-success btn-xs dropdown-toggle' data-toggle='modal' data-target='#filters'>
                    Filtro
                    <span class='caret'></span>
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-condensed table-responsive">
        <thead>
        <tr>{{ '\n' }}
            {%- for field, metadata in fields %}
            <th class="{{ "{{ pager.isSorted('"~  field ~ "') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}" }}"> {{ "{{'"~ field ~ " '|trans|upper }} "}}</th>{{ '\n' }}
            {%- endfor %}
            <th style="width: 100px;">{{ "{{'Acciones'|trans|upper }}" }}</th>{{ '\n' }}
        </tr>
        </thead>
        <tbody>
        {{ '{% for entity in pager %}' }}
        <tr>{{ '\n' }}
            {%- for field, metadata in fields %}
                {%- if loop.first and ('show' in actions) %}
                    <td><a href="{{ "{{ path('" ~ route_name_prefix ~ "_show', { 'id': entity.id }) }}" }}">{{ '{{ entity.' ~ field|replace({'_': ''}) ~ ' }}' }}</a></td>{{ '\n' }}
                {%- elseif metadata.type in ['date', 'datetime'] %}
                    <td>{{ '{% if entity.' ~ field|replace({'_': ''}) ~ ' %}{{ entity.' ~ field|replace({'_': ''}) ~ '|date(\'Y-m-d H:i:s\') }}{% endif %}' }}</td>{{ '\n' }}
                {%- elseif metadata.type in ['boolean'] %}
                    <td>{{ '{{ entity.' ~ field|replace({'_': ''}) ~ '? \'<span class="label label-success">Activo</span>\' : \'<span class=\"label label-default\">Desactivado</span>\'  }}' }}</td>
                {%- else %}
                    <td>{{ '{{ entity.' ~ field|replace({'_': ''}) ~ ' }}' }}</td>{{ '\n' }}
                {%- endif %}

                {%- if loop.last %}
                    <td >
                    {%- include "crud/views/others/actions.html.twig" %}
                    </td>{{ '\n' }}
                {%- endif %}
            {%- endfor %}
        </tr>
        {{ '{% else %}' }}
        <tr >
            <td class="last-row" colspan="100" style="text-align: center;">{{ "{{'sin resultados'|trans }}" }}</td>
        </tr>
        {{ '{% endfor %}' }}
        </tbody>
    </table>

    <div class="row">
        <div class="col-lg-10">
            {{ '{{ knp_pagination_render(pager) }}' }}{{ '\n' }}
        </div>
        {% if 'new' in actions %}
            <div class="col-lg-2">

            </div>
        {% endif %}
    </div>

    {{"     {% endblock %} "}}
    {{" {% endembed %} "}}

    {{ "{% endblock contenido %}" }}
{% endblock body %}
