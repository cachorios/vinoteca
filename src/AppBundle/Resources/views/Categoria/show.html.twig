    {% extends 'AppBundle:admin:layout.html.twig' %}

    {% block contenido -%}
    {% embed '::portlet.html.twig' with {'titulo': 'Ver Categoria: ' ~ entity} %}
        {% block in_header %} 
        <div class='pull-right'>
        <div class="row">
                <div class="col-md-1 ">
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>
    <a href="{{ path('categoria_edit', { 'id': entity.id }) }}"
       class="btn btn-sm btn-default">
        Editar
    </a>





<a href="{{ path('categoria') }}" class="btn btn-sm btn-default">
    Ir a la lista
</a>


        </div>
    </div>
        {% endblock %}
            {% block cuerpo %} 
    <p></p>

    <table class="table">
        <tbody>
            <tr>
                <th class="show-header">Id</th>
                    <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th class="show-header">Nombre</th>
                    <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th class="show-header">Slug</th>
                    <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th class="show-header">Orden</th>
                    <td>{{ entity.orden }}</td>
            </tr>
            <tr>
                <th class="show-header">Level</th>
                    <td>{{ entity.level }}</td>
            </tr>
            <tr>
                <th class="show-header">Root</th>
                    <td>{{ entity.root }}</td>
            </tr>
        </tbody>
    </table>


    {% endblock %} 
    {% endembed %} 
    {% endblock contenido %}
