{% extends 'AppBundle:admin:layout.html.twig' %}
{% trans_default_domain "compra" %}

{% block id 'compra' %}

    {% block contenido -%}
        {% embed '::portlet.html.twig' with {'titulo': 'Lista de compras <small>(' ~ pager.totalItemCount ~ ' )</small>' } %}
            {% block in_header %}
                <div class='pull-right'>

                    <a href="{{ path('compra_new') }}" class="button_nuevo btn btn-sm btn-primary">

                        {{ 'Nueva Compra'|trans }}

                    </a>

                </div>

            {% endblock %}

            {% block cuerpo %}
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class='alert alert-{{ type }}'>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method='post' action='' class='form-horizontal'>
                    {% embed 'modal.html.twig' with { 'modal_id': 'filters', 'modal_titulo': 'Filtro de Productos'} %}
                        {% block modal_contenido %}
                            {{ form_rest(filterform) }}
                        {% endblock %}

                        {% block modal_botones %}

                            <input type='submit' class='btn btn-primary' name='submit-filter' value='Aplicar'/>

                            <input type='submit' class='btn btn-primary' name='submit-filter' value="reset"/>

                        {% endblock modal_botones %}
                    {% endembed %}
                </form>

                <div class="row">
                    <div class="col-lg-10">
                    </div>
                    <div class="col-lg-2">
                        <div class="pull-right">
                            <a class='btn bg-success btn-xs dropdown-toggle' data-toggle='modal' data-target='#filters'>
                                Filtro
                                <span class='caret'></span>
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-condensed table-responsive">
                    <thead>
                    <tr>
                        <th class="{{ pager.isSorted('facturaNumero') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ knp_pagination_sortable(pager, 'Numero de Factura', 'c.facturaNumero', { direction: 'desc' }) }}  </th>
                        <th class="{{ pager.isSorted('cuit') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ knp_pagination_sortable(pager, 'Cuit', 'c.cuit', { direction: 'desc' }) }} </th>
                        <th class="{{ pager.isSorted('fechaCompra') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ knp_pagination_sortable(pager, 'Fecha Compra', 'c.fechaCompra', { direction: 'desc' }) }} </th>
                        {#<th class="{{ pager.isSorted('fechaAlta') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'fechaAlta'|trans|upper }} </th>#}
                        <th class="actions">{{ 'Acciones'|trans|upper }}</th>
                        {#{{ "facturaNumero"|trans|upper }}#}
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in pager %}
                        <tr>
                            <td>{{ entity.facturaNumero }}</td>
                            <td>{{ entity.cuit }}</td>
                            <td>{% if entity.fechaCompra %}{{ entity.fechaCompra|date('d-m-Y') }}{% endif %}</td>
                            {#<td>{% if entity.fechaAlta %}{{ entity.fechaAlta|date('Y-m-d') }}{% endif %}</td>#}
                            <td class="actions">
                                <div class="btn-group">
                                    <a href="{{ path('compra_show', { 'id': entity.id }) }}"
                                       class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top"
                                       title="Ver mas información">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </a>
                                    <a href=""
                                       class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top"
                                       title="Ver mas información">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="last-row" colspan="100"
                                style="text-align: center;">{{ 'sin resultados'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-lg-10">
                        {{ knp_pagination_render(pager) }}

                    </div>
                    <div class="col-lg-2">

                    </div>
                </div>

            {% endblock %}
        {% endembed %}

    {% endblock contenido %}
