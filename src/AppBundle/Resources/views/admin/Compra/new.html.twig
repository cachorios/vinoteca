{% extends 'AppBundle:admin:layout.html.twig' %}
{% block id 'compra' %}
        {% block contenido -%}
            {% embed '::portlet.html.twig' with {'titulo': 'Nueva Compra' } %}
                {% block in_header %}
                    <div class='pull-right'>
                        <div class="row">

                            <a href="{{ path('compra') }}" class="btn btn-sm btn-default">
                                Ir a la lista
                            </a>

                        </div>
                    </div>
                {% endblock %}

                {% block cuerpo %}
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class='alert alert-{{ type }}'>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <p></p>

                    {{ form_start(form) }}

                    {{ form_row(form.facturaNumero) }}
                    {{ form_row(form.cuit) }}
                    {{ form_row(form.fechaCompra) }}
                    <div class="alert alert-info">
                        Introduce aqu√≠ todos los Item posibles de la compra.
                    </div>
                    {{ form_widget(form.items) }}

                    <div class="col-sm-offset-2 inner-actions">
                        <button title="Guardar" class="form-submit-button btn btn-sm btn-default btn-primary"
                                value="save_and_add" name="save_mode" type="submit">Guardar <span
                                    class="glyphicon glyphicon-ok"></span></button>
                        <button title="Guardar y Salir" class="form-submit-button btn btn-sm btn-default btn-info"
                                value="save_and_close" name="save_mode" type="submit">Guardar y Salir <span
                                    class="glyphicon glyphicon-remove"></span></button>
                        <a class="page-close-button btn btn-sm btn-default" href="{{ path('compra') }}">Cerrar
                            <span class="glyphicon glyphicon-remove"></span></a>
                    </div>

                    {{ form_widget(form) }}
                    {{ form_end(form) }}

                    {% embed 'modal.html.twig' with { 'modal_id': 'list-modal', 'modal_titulo': 'Listado de Productos'} %}
                        {% block modal_botones %}
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cerrar</button>
                        {% endblock modal_botones %}
                    {% endembed %}

                {% endblock %}
            {% endembed %}

        {% endblock contenido %}

    {% block javascript_footer %}
        {{ include('AppBundle:admin/Compra:js.html.twig',{'form': form}) }}

    {% endblock %}