{% extends 'AppBundle:admin:layout.html.twig' %}

    {% block id 'compra' %}
            {% block contenido -%}
                {% embed '::portlet.html.twig' with {'titulo': 'Editar Producto: ' ~ entity} %}
                    {% block in_header %}
                        <div class='pull-right'>
                            <div class="row">

                                <a href="{{ path('compra') }}" class="btn btn-sm btn-default">
                                    Ir a la lista
                                </a>

                            </div>
                        </div>
                    {% endblock %}

                    {% block cuerpo %}
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class='alert alert-{{ type }}'>
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <p></p>

                        {{ form_start(edit_form) }}

                        {{ form_row(edit_form.facturaNumero) }}
                        {{ form_row(edit_form.cuit) }}
                        {{ form_row(edit_form.fechaCompra) }}
                        <div class="alert alert-info">
                            Introduce aqu√≠ todos los Item posibles de la compra.
                        </div>
                        {#{{ form_row(edit_form.items) }}#}

                        <div class="col-sm-offset-2 inner-actions">
                            <button title="Guardar" class="form-submit-button btn btn-sm btn-default btn-primary"
                                    value="save_and_add" name="save_mode" type="submit">Guardar <span
                                        class="glyphicon glyphicon-ok"></span></button>
                            <button title="Guardar y Salir" class="form-submit-button btn btn-sm btn-default btn-info"
                                    value="save_and_close" name="save_mode" type="submit">Guardar y Salir <span
                                        class="glyphicon glyphicon-remove"></span></button>
                            <a class="page-close-button btn btn-sm btn-default" href="{{ path('compra') }}">Cerrar
                                <span class="glyphicon glyphicon-remove"></span></a>
                        </div>

                        {{ form_widget(edit_form) }}
                        {{ form_end(edit_form) }}

                    {% endblock %}
                {% endembed %}

            {% endblock contenido %}

    {% block javascript_footer %}


    {% endblock %}
