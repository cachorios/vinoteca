                            {#<td>{{ entity.tipopago }}</td>#}
                            {#<td>{{ entity.descuento }}</td>#}
                            {#<td>{{ entity.condiva }}</td>#}
                            {#<td>{{ entity.ncuenta }}</td>#}
                            {#<td>{{ entity.comentario }}</td>#}
