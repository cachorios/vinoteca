{% extends 'AppBundle:admin:layout.html.twig' %}
{% block id 'Proveedor' %} 

    {% block contenido -%}
        {% embed '::portlet.html.twig' with {'titulo': 'Lista de Proveedor <small>(' ~ pager.totalItemCount ~ ' )</small>' } %}
            {% block in_header %}
                <div class='pull-right'>

                    <a href="{{ path('proveedor_new') }}" class="button_nuevo btn btn-sm btn-primary">

                        {{ 'Nuevo Proveedor'|trans }}

                    </a>

                </div>

            {% endblock %}

            {% block cuerpo %}
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class='alert alert-{{ type }}'>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method='post' action='' class='form-horizontal'>
                    {% embed 'modal.html.twig' with { 'modal_id': 'filters', 'modal_titulo': 'Filtro de Proveedors'} %}
                        {% block modal_contenido %}
                            {{ form_rest(filterform) }}
                        {% endblock %}

                        {% block modal_botones %}

                            <input type='submit' class='btn btn-success' name='submit-filter' value='Aplicar'/>

                            <input type='submit' class='btn btn-primary' name='submit-filter' value="reset"/>

                        {% endblock modal_botones %}
                    {% endembed %}
                </form>


                <div class="row">
                    <div class="col-lg-10">
                    </div>
                    <div class="col-lg-2">
                        <div class="pull-right">
                            <a class='btn bg-success btn-xs dropdown-toggle' data-toggle='modal' data-target='#filters'>
                                Filtro
                                <span class='caret'></span>
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-condensed table-responsive">
                    <thead>
                    <tr>
                        {#<th class="{{ pager.isSorted('id') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'id '|trans | capitalize }} </th>#}
                        <th class="{{ pager.isSorted('codigo') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'codigo '|trans | capitalize }} </th>
                        <th class="{{ pager.isSorted('razon_social') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'razon_social '|trans | capitalize }} </th>
                        {#<th class="{{ pager.isSorted('nombre_fantasia') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'nombre_fantasia '|trans | capitalize }} </th>#}
                        <th class="{{ pager.isSorted('cuit') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'cuit '|trans | capitalize }} </th>
                        {#<th class="{{ pager.isSorted('domicilio') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'domicilio '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('codigo_postal') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'codigo_postal '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('provincia') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'provincia '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('ciudad') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'ciudad '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('pais') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'pais '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('pagina_web') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'pagina_web '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('telefono') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'telefono '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('fax') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'fax '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('mail') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'mail '|trans | capitalize }} </th>#}
                        <th class="{{ pager.isSorted('contacto') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto '|trans | capitalize }} </th>
                        {#<th class="{{ pager.isSorted('contacto_telefono') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto_telefono '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('contacto_int') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto_int '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('contacto_fax') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto_fax '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('contacto_movil') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto_movil '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('contacto_mail') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'contacto_mail '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('moneda') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'moneda '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('limite_credito') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'limite_credito '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('tipo_pago') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'tipo_pago '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('descuento') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'descuento '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('cond_iva') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'cond_iva '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('n_cuenta') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'n_cuenta '|trans | capitalize }} </th>#}
                        {#<th class="{{ pager.isSorted('comentario') ? 'headerSortDown glyphicon-sort-by-attributes': 'headerSortUp' }}"> {{ 'comentario '|trans | capitalize }} </th>#}
                        <th class="actions">{{ 'Acciones'|trans }}</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in pager %}
                        <tr>
                            {#<td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                            <td>{{ entity.codigo }}</td>
                            <td>{{ entity.razonsocial }}</td>
                            {#<td>{{ entity.nombrefantasia }}</td>#}
                            <td>{{ entity.cuit }}</td>
                            {#<td>{{ entity.domicilio }}</td>#}
                            {#<td>{{ entity.codigopostal }}</td>#}
                            {#<td>{{ entity.provincia }}</td>#}
                            {#<td>{{ entity.ciudad }}</td>#}
                            {#<td>{{ entity.pais }}</td>#}
                            {#<td>{{ entity.paginaweb }}</td>#}
                            {#<td>{{ entity.telefono }}</td>#}
                            {#<td>{{ entity.fax }}</td>#}
                            {#<td>{{ entity.mail }}</td>#}
                            <td>{{ entity.contacto }}</td>
                            {#<td>{{ entity.contactotelefono }}</td>#}
