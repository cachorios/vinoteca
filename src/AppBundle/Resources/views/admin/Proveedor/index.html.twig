                                <div class="btn-group">
                                    <a href="{{ path('proveedor_show', { 'id': entity.id }) }}"
                                       class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top"
                                       title="Ver mas informaciÃ³n">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                    </a>
                                    <a href="{{ path('proveedor_edit', { 'id': entity.id }) }}"
                                       class="btn btn-xs btn-default" data-toggle="tooltip" data-placement="top"
                                       title="Editar los datos">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="last-row" colspan="100"
                                style="text-align: center;">{{ 'sin resultados'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-lg-10">
                        {{ knp_pagination_render(pager) }}

                    </div>
                    <div class="col-lg-2">

                    </div>
                </div>

            {% endblock %}
        {% endembed %}

    {% endblock contenido %}
