<div class="col-xs-12">
    <div class="product-col list clearfix">
        <div class="image">
            <img src="{{ asset('uploads/productos/'~entity.imagenActiva) }}"
                 style="width: 230px" alt="product" class="img-responsive">
        </div>
        <div class="caption">
            <h4><a href="{{ path('productofull',{'id': entity.id }) }}">{{ entity.nombre }}</a></h4>

            

            <div class="description">
                {{ entity.descripcion | raw  | truncate(120, false, '...') }}
            </div>
            <div class="price">
                {#<p class="price-tax">Ex Tax: $279.99</p>#}
                {% if setting.descuentoGlobal == 0 %}
                    <span class="price-new">$ {{ '%8.2f'  | format(entity.precio ) }}</span>
                {% else %}
                    <span class="price-new">$ {{ '%8.2f'  | format(entity.precio - entity.precio * setting.descuentoGlobal/100 ) }}</span>
                    <span class="price-old">$ {{ '%8.2f'  | format(entity.precio ) }}</span>
                {% endif %}
            </div>
            <div class="cart-button button-group">
                <button type="button" title="" class="btn btn-wishlist"
                        data-original-title="Wishlist">
                    <i class="fa fa-heart"></i>
                </button>
                <button type="button" title="" class="btn btn-compare"
                        data-original-title="Compare">
                    <i class="fa fa-bar-chart-o"></i>
                </button>
                <button type="button" class="btn btn-cart">
                    {{ 'Agregar a la cesta' | trans }}
                    <i class="fa fa-shopping-cart"></i>
                </button>
            </div>
        </div>
    </div>
</div>