<section class="products-list">
    <div class="container">
        {#<!-- Heading Starts -->#}
        <h2 class="product-head">{{ "Ultimos productos" | trans }}</h2>
        {#<!-- Heading Ends -->#}
        {#<!-- Products Row Starts -->#}
        <div class="row">
        {%  for prod in   prods %}
            {#<!-- Product # Starts -->#}
            <div class="col-md-3 col-sm-6">
                <div class="product-col">
                    <div class="image">
                        <img src="{{ asset("uploads/productos/" ~ prod.imagenActiva ) }}" height="141" alt="product" class="img-responsive">
                    </div>
                    <div class="caption">
                        <h4><a href="product.html">{{ prod.nombre }}</a></h4>
                        <div class="description">
                            {{ prod.descripcion |truncate(70, false, '...') }}

                        </div>
                        <div class="price">
                            <span class="price-new">{{ prod.precio }}</span>
                            <span class="price-old">$249.50</span>
                        </div>
                        <div class="cart-button button-group">
                            <button type="button" title="" class="btn btn-wishlist" data-original-title="Wishlist">
                                <i class="fa fa-heart"></i>
                            </button>
                            <button type="button" title="" class="btn btn-compare" data-original-title="Compare">
                                <i class="fa fa-bar-chart-o"></i>
                            </button>
                            <button type="button" class="btn btn-cart">
                                Add to cart
                                <i class="fa fa-shopping-cart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {#<!-- Product # Ends -->#}

        {% endfor %}







        </div>
        <!-- Products Row Ends -->
    </div>
</section>