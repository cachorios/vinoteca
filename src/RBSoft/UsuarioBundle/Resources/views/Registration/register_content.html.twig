{% trans_default_domain 'registro' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
      class="fos_user_registration_register form-horizontal">
    <div class="form-group">
        <label class="col-sm-3 control-label required">{{ "eMail" | trans }}:</label>
        <div class="col-sm-9">

        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label required">{{ "Nombre Usuario" | trans }}:</label>
        <div class="col-sm-9">
            {{ form_widget(form.username) }}
            {{ form_errors(form.username) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label required">{{ "Contraseña" | trans }}:</label>
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}

        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label required">{{ "Repita Contraseña" | trans }}:</label>
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}

        </div>
    </div>

    {{ form_widget(form) }}

    <div class="pull-right">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary"/>
    </div>

</form>
