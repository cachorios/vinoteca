{% extends "AppBundle:admin:layout.html.twig" %}

    {% block id 'Usuario' %}


        {% block contenido -%}
            {% embed '::portlet.html.twig' with {'titulo': 'Nuevo Usuario' } %}
                {% block in_header %}
                    <div class='pull-right '>
                        <a href="{{ path('usuario') }}" class="btn btn-sm btn-default">
                            Ir a la lista
                        </a>
                    </div>
                {% endblock %}

                {% block cuerpo %}
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class='alert alert-{{ type }}'>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.imagen) }}
                            {{ form_row(form.login) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.activo) }}

                            <h4 class="content-title"><u>Informaci√≥n Adicional</u></h4>
                            {{ form_widget(form) }}


                            <div class="">
                                <input type="submit" value="Guardar" class="btn btn-success">
                            </div>
                        </div>
                    </div>

                    {{ form_widget(form) }}
                    {{ form_end(form) }}

                    <div class="row">
                        <div class="col-md-12">

                        </div>
                    </div>
                {% endblock %}
            {% endembed %}



        {% endblock contenido %}

        {% block javascript_footer %}
            <script>
                $("#rbsoft_usuariobundle_usuario_imagen").fileinput({
                    {#initialPreview: ["<img src='{{ asset("uploads/usuarios/" ~ entity.login ~ '.jpg' ) }}' class='file-preview-image'>"],#}
                    overwriteInitial: true,
                    showUpload: false,
                    showCaption: false,
                    browseClass: "btn btn-primary btn-lg",
                    fileType: "any",
                    allowedFileTypes: ['image'],
                    'allowedFileExtensions': ['jpg', 'png', 'gif'],
                    uploadLabel: 'Subir',
                    removeLabel: 'Quitar',
                    browseLabel: 'Explorar'

                });
            </script>

        {% endblock %}