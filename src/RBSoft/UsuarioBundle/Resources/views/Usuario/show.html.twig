{% extends "AppBundle:admin:layout.html.twig" %}

    {% block contenido -%}
        {% embed '::portlet.html.twig' with {'titulo': 'Ver Usuario: ' ~ entity} %}
            {% block in_header %}
                <div class='pull-right'>
                    <div class="row">

                        <div class="col-md-2 ">
                            <div class="pull-right">
                                {{ form(delete_form) }}
                            </div>
                        </div>

                        <a href="{{ path('admin_usuario_edit', { 'id': entity.id }) }}"
                           class="btn btn-sm btn-default">
                            Editar
                        </a>

                        <a href="{{ path('admin_usuario') }}" class="btn btn-sm btn-default">
                            Ir a la lista hola
                        </a>

                    </div>
                </div>
            {% endblock %}

            {% block cuerpo %}
                <p></p>

                <table class="table">
                    <tbody>
                    <tr>
                        <th class="show-header">Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Nombre</th>
                        <td>{{ entity.nombre }}</td>
                    </tr>
                    <tr>
                        <th class="show-header">Telefono</th>
                        <td>{{ entity.telefono }}</td>
                    </tr>
                    {#<tr>#}
                        {#<th class="show-header">Celular</th>#}
                        {#<td>{{ entity.celular }}</td>#}
                    {#</tr>#}
                    {#<tr>#}
                        {#<th class="show-header">Facebook</th>#}
                        {#<td>{{ entity.facebook }}</td>#}
                    {#</tr>#}
                    {#<tr>#}
                        {#<th class="show-header">Twitter</th>#}
                        {#<td>{{ entity.twitter }}</td>#}
                    {#</tr>#}
                    {#<tr>#}
                        {#<th class="show-header">Fecha Alta</th>#}
                        {#<td>{{ entity.fechaalta | date('d-m-Y') }}</td>#}
                    {#</tr>#}
                    </tbody>
                </table>

            {% endblock %}
        {% endembed %}
    {% endblock contenido %}
