{% extends "AppBundle:admin:layout.html.twig" %}
    {% block id 'Usuario' %} 
            {% block contenido -%}
                {% embed '::portlet.html.twig' with {'titulo': 'Editar Usuario: ' ~ entity} %}
                    {% block cuerpo %}
                        <p></p>

                        {{ form_start(edit_form) }}





                        {{ form_widget(edit_form) }}

                        <div class="col-sm-offset-2">
                            <input type="submit" value="Guardar" class="btn btn-success">
                        </div>

                        {{ form_end(edit_form) }}

                        <div class="row">

                            <div class="col-md-2 col-md-offset-8 ">
                                <div class="pull-right">
                                    {{ form(delete_form) }}
                                </div>
                            </div>

                            <div class="col-md-1  ">
                                <a href="{{ path('usuario') }}" class="btn btn-sm btn-default">
                                    Ir a la lista
                                </a>
                            </div>

                        </div>

                    {% endblock %}
                {% endembed %}

                {% block stylesheets %}
                    <link href="{{ asset("bundles/rbsoftabmgenerador/css/laradmin.css") }}" rel="stylesheet">

                {% endblock %}


            {% endblock contenido %}
{% block javascript_footer %}
    <script>
        $("#rbsoft_usuariobundle_usuario_imagen").fileinput({
            initialPreview: ["<img src='{{ asset("uploads/usuarios/" ~ entity.login ~ '.jpg' ) }}' class='file-preview-image'>"],
            overwriteInitial: true,
            showUpload: false,
            showCaption: false,
            browseClass: "btn btn-primary btn-lg",
            fileType: "any",
            allowedFileTypes: ['image'],
            'allowedFileExtensions' : ['jpg'],
            uploadLabel: 'Subir',
            removeLabel: 'Quitar',
            browseLabel: 'Explorar'


        });
    </script>

{% endblock %}
