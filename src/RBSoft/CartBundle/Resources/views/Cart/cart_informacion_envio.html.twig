<div class="panel-heading">
    <h3 class="panel-title">
        {{ "Informacion de Envio" | trans }}
    </h3>
</div>
<div class="panel-body">
    <!-- Form Starts -->
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputFname" class="col-sm-3 control-label">{{ 'Nombre' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputFname" placeholder="{{ 'Nombre' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputLname" class="col-sm-3 control-label">{{ 'Apellido' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputLname" placeholder="{{ 'Apellido' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-3 control-label">{{ 'eMail' | trans }}  :</label>

            <div class="col-sm-9">
                <input type="email" class="form-control" id="inputEmail" placeholder="{{ 'eMail' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone" class="col-sm-3 control-label">{{ 'Telefono' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputPhone" placeholder="{{ 'Telefono' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress1" class="col-sm-3 control-label">{{ 'Direccion/1' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputAddress1" placeholder="{{ 'Direcccion/1' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress2" class="col-sm-3 control-label">{{ 'Direccion/2' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputAddress2" placeholder="{{ 'Direccion/2' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputCity" class="col-sm-3 control-label">{{ 'Ciudad' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputCity" placeholder="{{ 'Ciudad' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPostCode" class="col-sm-3 control-label">{{ 'Código Postal' | trans }} :</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputPostCode" placeholder="{{ 'Código Postal' | trans }}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputCountry" class="col-sm-3 control-label">{{ 'País' | trans }} :</label>

            <div class="col-sm-9">
                <select class="form-control" id="inputCountry1">
                    <option>- {{ 'País' | trans }} -</option>
                    <option>India</option>
                    <option>USA</option>
                    <option>UK</option>
                    <option>China</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="inputRegion" class="col-sm-3 control-label">{{ 'Región' | trans }} :</label>

            <div class="col-sm-9">
                <select class="form-control" id="inputRegion1">
                    <option>- {{ 'Región' | trans }} -</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-warning">
                    {{ "Enviar" | trans }}
                </button>
            </div>
        </div>
    </form>
    <!-- Form Ends -->
</div>